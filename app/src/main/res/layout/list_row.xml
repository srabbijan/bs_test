<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    app:cardBackgroundColor="#f2f2f2"
    app:cardCornerRadius="5dp"
    android:elevation="2dp">
<LinearLayout
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvfull_name"
        android:textStyle="bold"
        android:textColor="#0969da"
        android:textSize="18sp"
        android:text="square/leakcanary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tvUpdatedDate"
        android:textSize="12sp"
        android:text="Updated on Mar 27, 2020"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tvTDes"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:maxLines="3"
        android:text="A memory leak detection library for Android."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvLanguage"
            android:textSize="12sp"
            android:text="Kotlin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            />
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_watch" />

        <TextView
            android:id="@+id/tvwatchers"
            android:textSize="12sp"
            android:text="780"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            />
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:src="@drawable/ic_fork"
            />
        <TextView
            android:id="@+id/tvForksCount"
            android:textSize="12sp"
            android:text="1310"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            />
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            />
        <TextView
            android:id="@+id/tvStargazersCount"
            android:textSize="12sp"
            android:text="5484"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            />
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_issue"
            />
        <TextView
            android:id="@+id/tvOpen_issues_count"
            android:textSize="12sp"
            android:text="75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>